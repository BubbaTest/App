<style>
    .dataTables_empty {
        display: none;
    }

    table.cell-border {
        width: 100%;
        clear: both;
    }

        table.cell-border th {
            padding: 5px;
            border: 1px solid #fff;
        }

        table.cell-border thead th {
            text-align: center;
            background: #66a9bd;
        }

        table.cell-border tbody td {
            text-align: center;
        }

    td {
        font-size: 12px;
    }
</style>

<div id="documentosMenSap">
    <table id="dtListasMenSap" class="cell-border" cellspacing="0" style="width:100%;">
        <thead>
            <tr>
                <th class="sortable-column"></th>
                <th class="sortable-column">Id</th>
                <th class="sortable-column">Módulo</th>
                <th class="sortable-column">MenuPadre</th>
                <th class="sortable-column">Codigo</th>
                <th class="sortable-column">Nombre</th>
                <th class="sortable-column">Descripción</th>
                <th class="sortable-column">Url</th>
                <th class="sortable-column">Tipo</th>
                <th class="sortable-column">Estado</th>
                <th class="sortable-column">Orden</th>
                <th class="sortable-column">Nivel</th>
            </tr>
        </thead>
    </table>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
            function obtenerMenSap(obj) {
                showalertify();
                vidmenuId = $(obj).attr('id');
                var url = obtenerURL('/Mantenimiento/ObteneMenSap?IdMenu=' + vidmenuId);
                $.getJSON(url)
                    .done(function (data) {
                        iniciarValoresMenSap(data);
                    })
                closealertify();
            }
        </script>
    , true);
}
