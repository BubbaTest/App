<div class="content">
    <div class="flex-grid">
        <div class="row flex-just-center">
            <div class="cell no-padding-bottom size6">
                <div class="input-control select full-size" data-placeholder="Seleccione una Materia" data-allow-clear="true">
                        @Html.DropDownList("materia", new SelectList(ViewBag.Materia as System.Collections.IEnumerable, "MateriaId", "Descripcion"),
                                        "", new { id = "ddlrelMateria", @style = "width:100%;" })
                    </div>                
            </div>
        </div>        
    </div>
</div>

@using (Html.BeginScriptContext())
{
    Html.AddScriptBlock(
        @<script type="text/javascript">
        </script>
    , true);
}
